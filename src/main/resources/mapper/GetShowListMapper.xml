<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pers.lrq.mapper.GetShowListMapper">
    <select id="getShowList" parameterType="integer" resultType="pers.lrq.domain.ShowList">
        select rid,rname,price,routeIntroduce,rdate,rimage  from tab_route  limit #{page},10;
    </select>

    <select id="getShowById" parameterType="integer" resultType="pers.lrq.domain.ShowList">
        select rid,rname,price,routeIntroduce,rdate,rimage from tab_route where rid = #{rid};
    </select>

</mapper>